#!/bin/bash

OUTPUT_DIR=~/Dropbox/Public
#OUTPUT_DIR=/tmp

if [ -z "$1" ]; then
	echo "usage: release <version>"
	exit 1
fi

function processfile {
        gpg -bs $1 || return $?
	cp $1 $TODIR
	mv $1.sig $TODIR
	return $?
}

function exiterr {
	echo "error, exiting."
	exit 1
}


if [ ! -d $OUTPUT_DIR ]; then
	echo "no output directory"
	exit 1
fi

if [ ! -e binary.img ] || [ ! -e binary/live/filesystem.squashfs ]; then
	echo "missing binary.img or filesystem.squashfs"
	exit 1
fi
TODIR=$OUTPUT_DIR/$1
test -d $TODIR || mkdir -p $TODIR
if [ ! -d $TODIR ]; then
        echo "no output directory"
        exit 1
fi

processfile binary.img || exiterr
cd binary || exiterr
tar -czf ../live.tar.gz live || exiterr
cd ..
processfile live.tar.gz || exiterr
rm live.tar.gz || exiterr

echo ""
echo "Calculating MD5 hash..."
cd $TODIR 
md5sum binary.img live.tar.gz

